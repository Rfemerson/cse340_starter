<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<!--Message Block-->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Inventory management view -->
<section id="managementPage">
    <h2>Click the button to add a new classification of vehicles</h2>
    <a href="/inv/add-classification" id="newClassBtn">Add New Classification</a>
    <h2>Click the button to add a new vehicle to the inventory</h2>
    <a href="/inv/add-inventory" id="newCarBtn">Add New Vehicle</a>
</section>
<section id="inventoryManagement">
    <h2>Manage Inventory</h2>
    <p>Choose a classification to see those inventory items.</p>
    <%- selectList %>
        <table id="inventoryDisplay"></table>
</section>

<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>