<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Delete Inventory Form -->
<form action="/inv/delete" class="addCar" id="deleteForm" method="Post">

    <p>Confirm Deletion - The delete is permanent.</p>  
    <label for="inv_make">Make: <br></label>
    <input type="text" placeholder="Make" name="inv_make" required value="<%= locals.inv_make %>" pattern="[A-Za-z]{1,}" 
        title="Letters Only" readonly>

    <label for="inv_model">Model: <br></label>
    <input type="text" placeholder="Model" name="inv_model" required value="<%= locals.inv_model %>"
        pattern="[A-Za-z0-9].{1,}" title="Letters and numbers only" readonly>

    <label for="inv_year">Year: <br></label>
    <input type="number" placeholder="Year" name="inv_year" min="1901" max="2099" step="1" required
        value="<%= locals.inv_year %>" pattern="[0-9].{4,4}" title="4 digit year only" readonly>

    <label for="inv_price">Price: <br></label>
    <input type="number" placeholder="Price" name="inv_price" min="1" step="any" required
        value="<%= locals.inv_price %>" pattern="[0-9].{1,}" title="Whole number only" readonly>

    <button type="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>
